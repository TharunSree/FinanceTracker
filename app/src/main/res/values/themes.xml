<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FinanceTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/colorText</item>
        <item name="windowActionBar">false</item>
        <!-- Enable the toolbar instead -->
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>
</resources>