<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:minHeight="?attr/listPreferredItemHeightSmall"> <com.google.android.material.checkbox.MaterialCheckBox
    android:id="@+id/senderCheckBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:clickable="false"
    android:focusable="false"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/senderNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceBodyLarge" android:textColor="?attr/colorOnSurface" tools:text="VK-HDFCBK" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/senderEnabledSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"/>

</LinearLayout>